<% content_for :body_content_title do %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
      <%=raw @wallpaper.title %>
    <h1>Description</h1>
      <%=raw @wallpaper.description %>
    <h1>Photo</h1>
    <p>
      <%= image_fu @wallpaper.photo, '600x600' %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="wallpapers">
      <% @wallpapers.each do |wallpaper| %>
        <li>
          <%= link_to wallpaper.title, refinery.wallpapers_wallpaper_path(wallpaper) %>
          <%= @wallpaper.inspect  %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
